{
  "extends": [
    "config:base",
    "schedule:earlyMondays",
    ":ignoreUnstable",
    ":automergeDigest",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    "group:recommended"
  ],
   "packageRules": [
    {
      "matchPackagePrefixes": [
        "org.axonframework"
      ],
      "groupName": "AxonFramework"
    },
    {
      "matchPackagePrefixes": [
        "jakarta.enterprise",
        "org.eclipse:yasson",
        "jakarta.json"
      ],
      "groupName": "JakartaEE"
    }
  ],
  "customManagers": [
    {
      "description": "Update java version in Maven pom.xml",
      "customType": "regex",
      "datasourceTemplate": "java-version",
      "depNameTemplate": "java",
      "packageNameTemplate": "",
      "fileMatch": [
        "(^|/|\\.)pom\\.xml$"
      ],
      "matchStrings": [
        "<java.version>(?<currentValue>[0-9]+)<\/java.version>"
      ]
    }
  ]
}
