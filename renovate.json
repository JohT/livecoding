{
  "extends": [
    "config:base",
    "schedule:earlyMondays",
    ":ignoreUnstable",
    ":automergeDigest",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    "group:recommended"
  ],
   "packageRules": [
    {
      "matchPackagePatterns": [
        "^org\\.axonframework.*"
      ],
      "groupName": "AxonFramework"
    }
  ],
   "packageRules": [
    {
      "matchPackagePrefixes": [
        "jakarta.enterprise",
        "org.eclipse:yasson",
        "jakarta.json"
      ],
      "groupName": "JakartaEE"
    }
  ]
}
